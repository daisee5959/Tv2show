    if (count >= 30) return { level: 4, name: 'ì‹œë„¤í•„', emoji: 'ğŸ¥', next: 50 };
    if (count >= 15) return { level: 3, name: 'ì˜í™” ì• í˜¸ê°€', emoji: 'ğŸ¿', next: 30 };
    if (count >= 5) return { level: 2, name: 'ì˜í™” íŒ¬', emoji: 'ğŸï¸', next: 15 };
    return { level: 1, name: 'ì˜í™” ì…ë¬¸ì', emoji: 'ğŸ«', next: 5 };
