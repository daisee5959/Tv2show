    { id: 'exciting', label: 'ê¸´ì¥ê°' },
    { id: 'emotional', label: 'ê°ì„±' },
    { id: 'fun', label: 'ìœ ì¾Œ' },
    { id: 'thoughtful', label: 'ì‚¬ìƒ‰' },
    { id: 'romantic', label: 'ë¡œë§¨ìŠ¤' },
    { id: 'scary', label: 'ê³µí¬' }
